  <javascript> 
    <query>jQuery(document).ready(function () { $("#tool_bar").append('&lt;input type="button" value="重算业务量" class="operation cbutton cbutton_bg_118" onclick="csywl()"/&gt;'); }); //自定义验证，在提交时执行。通过返回true，否则返回false function customValidate(){ return true; } function csywl(){ custom_confirm('业务量将会被重新计算,计算过程中需要等待一定时间，请确认是否执行？','提示',function(){ reset_witing(true,'正在重算业务量，请稍候。。。'); $.post('/module/gygl/csywl', '', function(theback) { custom_alert(theback,'提示',null,{},350,150); loadData(); }); },'',340,200); } function showDeleteDialog(sel){ var jsrq=sel["JSRQ"]; if(null!=jsrq){ if(jsrq!='29991231') { custom_alert("只能删除结束日期为29991231的记录，请重新操作!"); return ; } } var qsrq=sel["QSRQ"]; var sys=$("#sysdate").val(); if(parseInt(qsrq)&lt;parseInt(sys)){ custom_alert("只能删除起始日期在重算范围内的记录，请重新操作!"); return ; } custom_confirm('你确定要删除所选记录吗？','提示',function(){ var colIds="GYH,HYDH,HYMC,KHDXDH,QSRQ,JSRQ"; var colId=colIds.split(",");//所有的主键名 var params="&amp;"; //URL的参数 for(var i=0;i&lt;colId.length;i++){ params+=colId[i].toLowerCase()+"="+selDataFilter(sel[colId[i]])+"&amp;"; } params=encodeURI(params.substring(0,params.length-1)); //alert(params); $.post('/module/parser/manage/deleteData/gyhydygx'+params,{},function(cb){ custom_alert(cb); loadData(); }).error(function(){ custom_alert("发生内部错误，无法删除所选记录！"); }); }); }</query>  
    <edit>jQuery(document).ready(function () { //这里的js脚本，会在页面加载完成后执行 PAS.di.execute('gyhydygx_getMaxJldh',getNextJldh); $('#gyhh').val($('#gyh').val()); PAS.di.execute('gyhydygx_getLastKhdxdhAndQsrq1',getLastKhdxdhAndQsrq); $('#gyh').executeOnEvent('blur', 'gyhydygx_getLastKhdxdhAndQsrq2', getLastKhdxdhAndQsrq); }); //自定义验证，在提交时执行。通过返回true，否则返回false function customValidate(){ if(fucCheckLength($('#gyh').val())&gt;12){ alert('柜员号超长！'); return false; } return true; } function fucCheckLength(strTemp) { var i,sum; sum=0; for(i=0;i&lt;strTemp.length;i++) { if ((strTemp.charCodeAt(i)&gt;=0) &amp;&amp; (strTemp.charCodeAt(i)&lt;=255)) sum=sum+1; else sum=sum+2; } return sum; } function getNextJldh(obj){ if(obj.data.length&gt;0){ $("#nextJldh").val(parseInt(obj.data[0].JLDH)+1); PAS.di.setDone(obj.sqlid); } } function getLastKhdxdhAndQsrq(obj){ if(typeof(obj.data[0].QSRQ)=="undefined"){ $("#lastQsrq").val(""); }else{ $("#lastQsrq").val(obj.data[0].QSRQ); } if(typeof(obj.data[0].KHDXDH)=="undefined"){ $("#lastKhdxdh").val(""); }else{ $("#lastKhdxdh").val(obj.data[0].KHDXDH); } }</edit> 
