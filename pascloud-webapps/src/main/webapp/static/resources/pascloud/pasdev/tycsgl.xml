  <sqlMap namespace="studio.tycsgl"> 
    <select id="dn1.tycsglList" parameterClass="java.util.Map" resultClass="java.util.HashMap" remapResults="true"> 
      <isNotEmpty property="db"><![CDATA[/**!mycat:datanode=$db$**/]]></isNotEmpty> select cslxms.dmz as cslx,cslxms.dmms as cslxmc, csms.dmz as csmc,csms.dmms as csmcmc,cs.qsrq , cs.jsrq,cs.csz from csb_lrcs cs inner join csb_dmms cslxms on trim(cslxms.dmmc) = 'LRCSLX' and cslxms.dmz = cs.cslx inner join csb_dmms csms on trim(csms.dmmc)=trim(cs.cslx) and csms.dmz = trim(cs.csmc) where 1=1 
      <isNotEmpty property="cslx">and cslxms.dmz like '$cslx$'</isNotEmpty>  
      <isNotEmpty property="csmc1">and csms.dmz like '$csmc1$'</isNotEmpty> order by cs.cslx,cs.csmc,cs.qsrq
    </select>  
