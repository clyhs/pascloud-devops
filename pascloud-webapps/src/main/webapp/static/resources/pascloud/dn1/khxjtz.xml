    <select id="dn1.khxjtzList" parameterClass="java.util.Map" resultClass="java.util.HashMap" remapResults="true"> 
      <isNotEmpty property="db"><![CDATA[/**!mycat:datanode=$db$**/]]></isNotEmpty> SELECT PDJG.TJRQ, jg.jgdh,jg.jgmc, PDJG.KHH,PDJG.KHMC,dmms.dmms,PDFA.PDMC,PDJG.Xjmc,pdjg.pdbzms,PDFA.PDBH,PDXJ.xjbh ,PDJG.khlb FROM KHXJ_PDJG PDJG INNER JOIN KHDX_JG JG ON JG.KHDXDH = PDJG.JGKHDXDH INNER JOIN CSB_DMMS DMMS ON DMMC='DJPDKHLB' AND PDJG.KHLB = DMMS.DMZ INNER JOIN KHXJ_PDFA PDFA ON PDFA.PDBH = PDJG.PDBH inner join KHXJ_PDXJ pdxj on pdxj.pdbh=PDJG.PDBH and pdxj.xjmc = pdjg.xjmc where 1=1 
      <isNotEmpty property="tjrq">and PDJG.tjrq=$tjrq$</isNotEmpty> and jg.KHDXDH in($jgkhdxdh$) 
      <isNotEmpty property="khh">and pdjg.khh like '%$khh$%'</isNotEmpty>  
      <isNotEmpty property="khmc">and pdjg.khmc like '%$khmc$%'</isNotEmpty>  
      <isNotEmpty property="pdfabh">and pdjg.pdbh = $pdfabh$</isNotEmpty>  
      <isNotEmpty property="xjmc">and pdjg.xjbh = '$xjmc$'</isNotEmpty> order by jg.jgdh desc ,pdfa.pdbh desc ,pdxj.xjbh desc
    </select>  
