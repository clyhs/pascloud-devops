<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <!-- ehcache define here -->
    <bean id="cacheManager"		  class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation">
            <value>classpath:ehcache-config.xml</value>
        </property>
    </bean>
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${db.driveClass}" />
        <property name="url" value="${db.url}" />
        <property name="username" value="${db.username}"/>
        <property name="password" value="${db.password}" />
        <property name="maxActive" value="100" />
        <property name="maxIdle" value="100" />
        <property name="maxWait" value="50" />
        <property name="defaultAutoCommit" value="true" />
        <property name="removeAbandoned" value="true" />
        <property name="removeAbandonedTimeout" value="60" />
        <property name="logAbandoned" value="true" />
    </bean>
    <!-- SqlMap setup for iBATIS Database Layer -->
    <bean id="sqlMapClient"		  class="com.tiancom.pas.common.framework.ibatis.dy.DySqlMapClientFactoryBean">
        <property name="configLocation">
            <value>classpath:com/tiancom/pas/common/config/db2/ibatis-config.xml</value>
        </property>
        <property name="mappingLocations">
            <list>
                <value>classpath:com/tiancom/pas/*/*_SqlMap.xml</value>
                <!-- db2版本核心sqlMpa配置 -->
                <value>classpath:com/tiancom/pas/*/db2/*_SqlMap.xml</value>
                <value>classpath*:com/tiancom/studio/paspm/dao/db2/*_SqlMap.xml</value>
                <value>classpath*:com/tiancom/mpas/*/*_SqlMap.xml</value>
                <value>classpath*:com/tiancom/mpas/*/db2/*_SqlMap.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="dataSource" />
        <property name="debug" value="true"/>
    </bean>
    <!-- Transaction manager for a single JDBC DataSource -->
    <bean id="transactionManager"		  class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>
    <!-- Transaction template for Managers -->
    <bean id="txProxyTemplate" abstract="true"		  class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager" ref="transactionManager" />
        <property name="transactionAttributes">
            <props>
                <prop key="save*">PROPAGATION_REQUIRED</prop>
                <prop key="add*">PROPAGATION_REQUIRED</prop>
                <prop key="remove*">PROPAGATION_REQUIRED</prop>
                <prop key="update*">PROPAGATION_REQUIRED</prop>
                <prop key="insert*">PROPAGATION_REQUIRED</prop>
                <prop key="delete*">PROPAGATION_REQUIRED</prop>
                <prop key="submit*">PROPAGATION_REQUIRED</prop>
                <prop key="load*">PROPAGATION_REQUIRED</prop>
                <prop key="built*">PROPAGATION_REQUIRED</prop>
                <prop key="tran*">PROPAGATION_REQUIRED</prop>
                <prop key="import*">PROPAGATION_REQUIRED</prop>
                <prop key="transfer*">PROPAGATION_REQUIRED</prop>
                <prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
            </props>
        </property>
    </bean>
    <!-- 将sqlExecutor注入BaseDaoiBatis中，修改了分页读取方式 -->
    <bean id="sqlExecutor"		  class="com.tiancom.pas.common.framework.ibatis.LimitSqlExecutor">
        <property name="dialect">
            <!-- db2分页方言 -->
            <bean class="com.tiancom.pas.common.framework.ibatis.dialect.DB2Dialect" />
        </property>
    </bean>
    <bean id="sqlExecutor1" class="com.ibatis.sqlmap.engine.execution.SqlExecutor"></bean>
    <bean id="baseDao" abstract="true"		  class="com.tiancom.pas.common.framework.ibatis.BaseiBatisDao"		  init-method="initialize">
        <property name="dataSource">
            <ref bean="dataSource" />
        </property>
        <property name="sqlMapClient">
            <ref bean="sqlMapClient" />
        </property>
        <property name="sqlExecutor">
            <ref bean="sqlExecutor1" />
        </property>
    </bean>
    <bean id="system.IBaseDAO" class="com.tiancom.pas.common.framework.ibatis.BaseDAOImp" parent="baseDao">
        <property name="dataSource" ref="dataSource"/>
        <property name="sqlMapClient" ref="sqlMapClient"/>
    </bean>
    <!-- 导出管理通用类 -->
    <bean id="exportConfig"		  class="com.tiancom.pas.common.util.export.Configuration"		  init-method="InitConfig">
        <property name="configLocation">
            <value>/com/tiancom/pas/exporter/exporter.xml</value>
        </property>
        <property name="exportPageUrl">
            <value>/common/export.jsp?method=selectType</value>
        </property>
    </bean>
    <!-- Brio报表 通用类 -->
    <bean id="brioBqy" class="com.tiancom.pas.common.util.brio.BrioBqy">
        <property name="brioHost">
            <value>localhost</value>
        </property>
        <property name="brioPort">
            <value>80</value>
        </property>
        <property name="userId">
            <value>admin</value>
        </property>
        <property name="userPwd">
            <value>password</value>
        </property>
        <property name="bqyCategory">
            <value>00000127e1444cb0-0000-0412-c0a80079</value>
        </property>
        <property name="port">
            <value>19000</value>
        </property>
    </bean>
    <!-- 给pasplus注入ibatisDao -->
    <bean id="studio.PasDao" parent="txProxyTemplate">
        <property name="target">
            <bean class="com.tiancom.studio.parser.common.core.PasDao">
                <property name="ibatisDao" ref="system.IBaseDAO"/>
            </bean>
        </property>
    </bean>
    <bean id="studio.ManageDao" parent="txProxyTemplate">
        <property name="target">
            <bean class="com.tiancom.studio.parser.manage.ManageParserDao"></bean>
        </property>
    </bean>
    <bean id="studio.YjgxDao" parent="txProxyTemplate">
        <property name="target">
            <bean class="com.tiancom.studio.parser.yjgx.YjgxParserDao"></bean>
        </property>
    </bean>
    <bean id="studio.ImportDao" parent="txProxyTemplate">
        <property name="target">
            <bean class="com.tiancom.studio.parser.imp.ImpParserDao"></bean>
        </property>
    </bean>
</beans>